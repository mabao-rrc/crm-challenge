<div class="card h-100 shadow-sm customer-box">
  <% if customer.image.attached? %>
    <%= image_tag customer.image, class: "card-img-top", alt: customer.full_name,
        style: "object-fit: cover; height: 250px;" %>
  <% end %>

  <div class="card-body d-flex flex-column">
    <h5 class="card-title mb-2"><%= customer.full_name %>I AM HERE</h5>
    <p class="card-text mb-1"><strong>Phone:</strong> <%= customer.phone_number %></p>

    <% if customer.email_address.present? %>
      <p class="card-text mb-1"><strong>Email:</strong> <%= customer.email_address %></p>
    <% else %>
      <p class="card-text text-muted"><em>Email not provided</em></p>
    <% end %>

    <p class="card-text mt-2"><strong>Notes:</strong><br>
      <%= simple_format(customer.notes) %>
    </p>
  </div>
</div>
